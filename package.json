{
  "name": "ackbar-snackbar",
  "version": "1.0.0",
  "description": "An easy to use and customisable snackbar component to use on any project",
  "author": "LuisPato",
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/boguz/ackbar-snackbar"
  },
  "keywords": ["snackbar", "notification", "alert", "toast", "webcomponent", "customizable"],
  "scripts": {
    "start": "web-dev-server",
    "lint": "npm run format && eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "bundle": "npm run lint && npm run test && rollup -c",
    "publish": "npm run bundle && npm publish"
  },
  "dependencies": {
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.2.0",
    "@open-wc/semantic-dom-diff": "^0.19.4",
    "@open-wc/testing": "^2.5.32",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@web/dev-server": "^0.1.7",
    "@web/test-runner": "^0.12.15",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "npm": "^7.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.39.0",
    "rollup-plugin-summary": "^1.2.3",
    "rollup-plugin-terser": "^7.0.2"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "rules": {
      "class-methods-use-this": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
